<launch>
  <param name="/use_sim_time" value="true" />
  <arg name="bag_filename" default="/home/robot/xm-autosystem/src/package/param/maps/robot.bag"/>
 
  <param name="robot_description" textfile="$(find cartographer_ros)/urdf/indoor.urdf" />
  
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
 
  <node name="playbag" pkg="rosbag" type="play" args="/home/robot/xm-autosystem/src/package/param/maps/robot.bag"/>
  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find cartographer_ros)/configuration_files
          -configuration_basename xiaoma_2d.lua"
      output="screen">
    <!-- <remap from="scan" to="horizontal_laser_2d" /> -->
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />

  <!-- <include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch"/> -->
</launch>