<?xml version="1.0"?>

<launch>


    <!-- run pointcloud_to_laserscan node -->
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan" respawn="false">

        <remap from="cloud_in" to="points_rectified"/>
        <remap from="scan" to="scan1"/>
        <rosparam>
            target_frame: rslidar # Leave disabled to output scan in pointcloud frame
            transform_tolerance: 0.01
            min_height: -100 #-0.2
            max_height: 3 #0.8
            angle_increment: 0.003 # M_PI/360.0
            scan_time: 0.03333
            range_min: 0.05 #0.5
            range_max: 199.9
            use_inf: true
            inf_epsilon: 1.0

            # Concurrency level, affects number of pointclouds queued for processing and number of threads used
            # 0 : Detect number of cores
            # 1 : Single threaded
            # 2->inf : Parallelism level
            concurrency_level: 0
        </rosparam>

    </node>

</launch>
